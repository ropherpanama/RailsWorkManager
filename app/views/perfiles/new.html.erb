<h2>Registrar nuevo perfil</h2> 
 
<%= link_to 'Volver', perfiles_path %>

<div class="row"> 
<div class="col-md-6 col-md-offset-3">

<%= form_for :perfil, url: perfiles_path do |f| %>
   <% if @perfil.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@perfil.errors.count, "error") %> prohibited this perfil from being saved:</h2>
       <ul>
         <% @perfil.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
       </ul>
     </div>
     <% end %>
  <p>
    <%= f.label :perfil %><br>
    <%= f.text_field :nombre %>
  </p>
 
  <p>
    <%= f.label :descripcion %><br>
    <%= f.text_area :desc %>
  </p>
 
  <p>
    <%= f.submit :Guardar, class: "btn btn-primary" %>
  </p>
<% end %>

</div>
</div>