<% @page_title = "User Login" %>

<div class="row">
<div class="col-md-6 col-md-offset-3">
	<%= form_tag(:action => 'attempt_login') do %>
	
	<p>
		<%= label_tag(:username) %>
		<%= text_field_tag(:username) %>
	</p>
	
	<p>
		<%= label_tag(:password) %>
		<%= password_field_tag(:password) %>
	</p>
	
	<p>
		<%= submit_tag("Login", :class => "btn btn-primary") %>
	</p>
	
	<% end %>
</div>
</div>